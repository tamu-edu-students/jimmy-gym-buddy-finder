<div class="buddy-container">
  <div class="header">
    <h2>My Buddies</h2>
    <div class="search-box">
        <input type="text" placeholder="Search buddies..." id="buddy-search">
    </div>
  </div>

  

  <div class="buddies-list">
    <% @buddies.each do |buddy| %>
      <div class="buddy-item">
        <%= link_to chatroom_path(buddy_name: buddy.downcase) do %>
          <div class="buddy-avatar">
            <%= image_tag 'default_avatar.png', alt: "#{buddy}'s avatar" %>
          </div>
          <div class="buddy-info">
            <div class="buddy-name"><%= buddy %></div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% content_for :javascript do %>
  <%= javascript_include_tag 'chat' %>
<% end %>