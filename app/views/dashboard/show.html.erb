<h1 class="subtitle text-center mb-4" style="color: #a3bb33;">
  Kickstart your fitness journey with Jimmy !</h1>

<ul class="features-list list-unstyled text-center">
  <li class="mt-3">
    <span>
      <a href="<%=  buddies_path %>" class="badge bg-warning text-dark p-3" style="text-decoration: none;">
        <span>Chat</span>
      </a>
    </span>
  </li>
  <li>
  <li class="mt-3">
  <span>
   <a href="<%= matching_profileswipe_path(user_id: @user.id) %>" class="badge bg-warning text-dark p-3" style="text-decoration: none;">
    <i class="bi bi-people"></i> Find a Buddy
    </a>
    </span>
  </li>
  <% if @user.fitness_profile %>
  <li class="mt-3">
    <span>
      <a href="<%= user_fitness_profile_path(@user, @user.fitness_profile) %>" class="badge bg-warning text-dark p-3" style="text-decoration: none;">
        <span>Fitness</span>
      </a>
    </span>
  </li>
  <% else %>
  <li class="mt-3">
    <span>
      <a href="<%= new_user_fitness_profile_path(@user) %>" class="badge bg-warning text-dark p-3" style="text-decoration: none;">
        <span>Create Fitness Profile</span>
      </a>
    </span>
  </li>
  <% end %>
</ul>

