<div class="dashboard-container">
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">Welcome to Jimmy</h1>
      <p class="hero-subtitle">Your Ultimate Gym Buddy Finder</p>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="intro-text">
          <h2>Elevate Your Fitness Journey</h2>
          <p>Connect with like-minded fitness enthusiasts, find your perfect gym partner, and achieve your goals together. Jimmy makes it easy and fun to stay motivated and accountable.</p>
        </div>

        <div class="feature-grid">
          <a href="<%= matching_profileswipe_path(user_id: @user.id) %>" class="feature-item">
            <div class="feature-content">
              <div class="feature-icon">
                <i class="bi bi-people-fill"></i>
              </div>
              <h3>Find a Buddy</h3>
              <p>Discover your perfect gym partner</p>
            </div>
          </a>

          <% if @user.fitness_profile %>
            <a href="<%= user_fitness_profile_path(@user, @user.fitness_profile) %>" data-turbo="false" class="feature-item">
              <div class="feature-content">
                <div class="feature-icon">
                  <i class="bi bi-activity"></i>
                </div>
                <h3>Fitness Profile</h3>
                <p>View and edit your fitness details</p>
              </div>
            </a>
          <% else %>
            <a href="<%= new_user_fitness_profile_path(@user) %>" class="feature-item">
              <div class="feature-content">
                <div class="feature-icon">
                  <i class="bi bi-plus-circle-fill"></i>
                </div>
                <h3>Create Fitness Profile</h3>
                <p>Set up your fitness profile</p>
              </div>
            </a>
          <% end %>

          <a href="<%= matched_users_path(@user) %>" class="feature-item">
            <div class="feature-content">
              <div class="feature-icon">
                <i class="bi bi-person-check-fill"></i>
              </div>
              <h3>Matched Users</h3>
              <p>See who you've connected with</p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

