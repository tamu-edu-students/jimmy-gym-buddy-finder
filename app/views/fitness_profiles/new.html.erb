<h1 class="text-center mb-4">Create Fitness Profile</h1>

<p class="text-center mb-4">
  Please create your fitness profile first
</p>

<%= form_with model: @fitness_profile, url: user_fitness_profile_path(@user), local: true, class: "needs-validation", novalidate: true do |form| %>
  <div class="container">
    <div class="card shadow mb-5 profile-card" style="max-width: 700px; margin: 0 auto; border-radius: 15px;">
      <div class="card-body">

        <div class="form-group mb-3">
          <%= form.label :goal, class: "form-label" %>
          <%= form.select :goal, options_for_select([
            ['Weight Loss', 'Weight Loss'],
            ['Muscle Gain', 'Muscle Gain'],
            ['Maintain Weight', 'Maintain Weight']
          ], @fitness_profile.goal), {}, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :fitness_level, class: "form-label" %>
          <%= form.select :fitness_level, options_for_select([
            ['Beginner', 'Beginner'],
            ['Intermediate', 'Intermediate'],
            ['Advanced', 'Advanced']
          ], @fitness_profile.fitness_level), {}, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :workout_frequency, class: "form-label" %>
          <%= form.select :workout_frequency, options_for_select([
            ['1-2 times a week', '1-2 times a week'],
            ['3-4 times a week', '3-4 times a week'],
            ['5 or more times a week', '5 or more times a week']
          ], @fitness_profile.workout_frequency), {}, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :preferred_workout_types, class: "form-label" %>
          <%= form.text_area :preferred_workout_types, class: "form-control", rows: 3, placeholder: "e.g., Cardio, Strength Training, Yoga" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :nutrition_preferences, class: "form-label" %>
          <%= form.text_area :nutrition_preferences, class: "form-control", rows: 3, placeholder: "e.g., Vegetarian, Vegan, High Protein" %>
        </div>

        <div class="mt-4 text-center">
          <%= form.submit "Create Fitness Profile", class: "btn custom-btn text-white", id: "submit-btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
