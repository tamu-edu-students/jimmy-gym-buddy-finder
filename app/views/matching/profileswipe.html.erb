<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Swipe</title>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="container d-flex flex-column align-items-center mt-4">
    <!-- Search Filter -->
    <div class="w-100 mb-3 d-flex justify-content-center">
  <input type="text" id="search" class="form-control" style="width: 400px;" placeholder="Search Profiles" onkeyup="filterProfiles()" />
</div>
    <!-- Tinder-like Cards -->
    <div class="profile-cards w-100 d-flex flex-column align-items-center">
      <div class="profile-card card shadow mb-2" style="display:none;">
        <img src="https://randomuser.me/api/portraits/men/1.jpg" class="card-img-top" alt="John">
        <div class="card-body text-center">
          <h5 class="card-title">John</h5>
          <p class="card-text">Age: 30</p>
          <p class="card-text">Activities: Running, Soccer</p>
        </div>
      </div>
      <div class="profile-card card shadow mb-2" style="display:none;">
        <img src="https://randomuser.me/api/portraits/women/2.jpg" class="card-img-top" alt="Sarah">
        <div class="card-body text-center">
          <h5 class="card-title">Sarah</h5>
          <p class="card-text">Age: 25</p>
          <p class="card-text">Activities: Cardio, Yoga</p>
        </div>
      </div>
      <div class="profile-card card shadow mb-2" style="display:none;">
        <img src="https://randomuser.me/api/portraits/men/3.jpg" class="card-img-top" alt="Mike">
        <div class="card-body text-center">
          <h5 class="card-title">Mike</h5>
          <p class="card-text">Age: 28</p>
          <p class="card-text">Activities: Soccer</p>
        </div>
      </div>
      <div class="profile-card card shadow mb-2" style="display:none;">
        <img src="https://randomuser.me/api/portraits/women/4.jpg" class="card-img-top" alt="Emma">
        <div class="card-body text-center">
          <h5 class="card-title">Emma</h5>
          <p class="card-text">Age: 22</p>
          <p class="card-text">Activities: Calisthenics</p>
        </div>
      </div>
      <div class="profile-card card shadow mb-2" style="display:none;">
        <img src="https://randomuser.me/api/portraits/men/5.jpg" class="card-img-top" alt="Alex">
        <div class="card-body text-center">
          <h5 class="card-title">Alex</h5>
          <p class="card-text">Age: 27</p>
          <p class="card-text">Activities: HIIT, Tennis</p>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <!-- Action Buttons -->
    <div class="row justify-content-center mt-2 w-100">
      <div class="col-auto">
        <button class="btn btn-warning" onclick="handleAction('block')" title="Block">
          <i class="fas fa-ban"></i>
        </button>
      </div>
      <div class="col-auto">
        <button class="btn btn-warning" onclick="handleAction('skip')" title="Skip">
          <i class="fas fa-forward"></i>
        </button>
      </div>
      <div class="col-auto">
        <button class="btn btn-warning" onclick="handleAction('like')" title="Like">
          <i class="fas fa-thumbs-up"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- JavaScript for profile swipe functionality -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      let currentCardIndex = 0;
      const cards = document.querySelectorAll(".profile-card");

      // Show the first card
      if (cards.length > 0) {
        cards[currentCardIndex].style.display = "block";
      }

      // Handle action button clicks
      window.handleAction = function (action) {
        if (cards.length === 0) return;

        // Hide the current card
        cards[currentCardIndex].style.display = "none";

        // Move to the next card
        currentCardIndex = (currentCardIndex + 1) % cards.length;

        // Show the next card
        cards[currentCardIndex].style.display = "block";
      };

      // Filter profiles by search term
      window.filterProfiles = function () {
        const searchTerm = document.getElementById("search").value.toLowerCase();
        cards.forEach((card) => {
          const profileText = card.innerText.toLowerCase();
          card.style.display = profileText.includes(searchTerm) ? "block" : "none";
        });
      };
    });
  </script>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <style>
    .profile-cards {
        max-width: 400px;
        width: 100%; /* Full width of the container */
        margin: 0 auto; /* Center the profile cards */
    }

    .profile-card {
        border-radius: 10px; /* Rounded corners */
        overflow: hidden; /* Prevents content overflow */
        width: 100%; /* Full width of the card */
        height: auto; /* Automatic height based on content */
        max-height: 350px; /* Max height for consistency */
      }
      
      .card-body {
        padding: 15px; /* Adds padding around the card body */
      }
      
      .card-title,
      .card-text {
        margin-bottom: 5px; /* Adjusts spacing between text elements */
        white-space: nowrap; /* Prevent text wrapping */
        overflow: hidden; /* Prevent overflow */
        text-overflow: ellipsis; /* Add ellipsis if text overflows */
      }

    .profile-card img {
        width: 100%;
        height: 200px; /* Fixed height for the image */
        object-fit: cover; /* Ensures the image covers the area without distortion */
    }

  </style>
</body>
</html>
