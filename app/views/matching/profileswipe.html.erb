<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tinder-like Swipe Cards</title>
    <link rel="stylesheet" href="profileswipe.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="tinder">
        <div class="tinder--status">
            <i class="fa fa-remove"></i>
            <i class="fa fa-heart"></i>
        </div>

        <div class="tinder--cards">
            <div class="tinder--card">
                <div class="user-image" style="background-image: url('https://img.freepik.com/free-photo/full-length-happy-sportswoman-jogging-road-morning-copy-space_637285-3764.jpg?semt=ais_hybrid');"></div>
                <div class="user-info">
                    <h3>Emma Johnson</h3>
                    <p>Age: 25</p>
                    <p>Fitness Enthusiast. Loves hiking and yoga.</p>
                </div>
            </div>
            <div class="tinder--card">
                <div class="user-image" style="background-image: url('https://cdn.prod.website-files.com/62aa9ab662e3d2778653006f/63dfa0be70afa6cb3db78a45_Solo60_Training%20Images-8-min.jpg');"></div>
                <div class="user-info">
                    <h3>Liam Smith</h3>
                    <p>Age: 28</p>
                    <p>Adventure seeker. Enjoys rock climbing and travel.</p>
                </div>
            </div>
            <div class="tinder--card">
                <div class="user-image" style="background-image: url('https://integrumtechnology.net/wp-content/uploads/2023/05/happy-young-woman-using-mobile-phone-in-gym-2021-09-03-07-02-04-utc1.jpg');"></div>
                <div class="user-info">
                    <h3>Olivia Brown</h3>
                    <p>Age: 23</p>
                    <p>Foodie and chef. Passionate about healthy eating.</p>
                </div>
            </div>
            <div class="tinder--card">
                <div class="user-image" style="background-image: url('https://res.cloudinary.com/hydrow/image/upload/f_auto/q_auto/v1693335736/Blog/how-to-enjoy-working-out-alone.jpg');"></div>
                <div class="user-info">
                    <h3>Noah Davis</h3>
                    <p>Age: 30</p>
                    <p>Tech geek. Loves coding and gaming.</p>
                </div>
            </div>
            <div class="tinder--card">
                <div class="user-image" style="background-image: url('https://www.theperfectworkout.com/cdn-cgi/image/width=1312,height=1312,fit=crop,quality=80,format=auto,onerror=redirect,metadata=none/wp-content/uploads/2024/05/Dedicated-personal-trainers-side-image.jpg');"></div>
                <div class="user-info">
                    <h3>Ava Wilson</h3>
                    <p>Age: 26</p>
                    <p>Artist and designer. Enjoys painting and photography.</p>
                </div>
            </div>
            
            
        </div>
        <div class="tinder--buttons">
            <button id="nope"><i class="fa fa-remove"></i></button>
            <button id="love"><i class="fa fa-heart"></i></button>
        </div>

    <script src="https://hammerjs.github.io/dist/hammer.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Select the Tinder container and the card elements
            const tinderContainer = document.querySelector('.tinder');
            const allCards = document.querySelectorAll('.tinder--card');

            // Initialize the Tinder cards to be visible
            function initCards() {
                const newCards = document.querySelectorAll('.tinder--card:not(.removed)');

                newCards.forEach(function (card, index) {
                    card.style.zIndex = allCards.length - index;
                    card.style.opacity = 1;
                    card.style.transform = 'scale(1) translateY(0px)';
                });

                tinderContainer.classList.remove('no-cards');
            }

            initCards(); // Call this function to show all cards initially

            // Optionally add any swipe functionality or event listeners here
            const nope = document.getElementById('nope');
            const love = document.getElementById('love');

            nope.addEventListener('click', function () {
                const card = document.querySelector('.tinder--card:not(.removed)');
                if (card) {
                    card.classList.add('removed');
                    initCards();
                }
            });

            love.addEventListener('click', function () {
                const card = document.querySelector('.tinder--card:not(.removed)');
                if (card) {
                    card.classList.add('removed');
                    initCards();
                }
            });
        });
    </script>
</body>
</html>
