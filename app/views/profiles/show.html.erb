<h1 class="main-heading">User Profile</h1>

<table class="table table-bordered">
  <tr>
    <th>Username</th>
    <td><%= @user.username %></td>
  </tr>
  <tr>
    <th>Age</th>
    <td><%= @user.age %></td>
  </tr>
  <tr>
    <th>Gender</th>
    <td><%= @user.gender %></td>
  </tr>
  <tr>
    <th>School</th>
    <td><%= @user.school %></td>
  </tr>
  <tr>
    <th>Major</th>
    <td><%= @user.major %></td>
  </tr>
  <tr>
    <th>About Me</th>
    <td><%= @user.about_me %></td>
  </tr>
</table>

<%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
