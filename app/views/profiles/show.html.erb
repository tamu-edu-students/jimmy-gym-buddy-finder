<h1 class="text-center mb-5 display-4">User Profile</h1>

<div class="container">
  <div class="card shadow-lg mb-5 profile-card" style="max-width: 700px; margin: 0 auto; border-radius: 15px;">
    <div class="row g-0">
      <!-- Profile Image Section -->
      <div class="col-md-5 text-center p-4 d-flex justify-content-center align-items-center">
        <% if @user.photo.attached? %>
          <%= image_tag @user.photo, class: "img-fluid square-img border border-success", alt: "User Photo" %>
        <% else %>
          <%= image_tag "https://www.shutterstock.com/image-vector/default-avatar-profile-icon-social-600nw-1677509740.jpg", class: "img-fluid square-img border border-success", alt: "No Photo Available" %>
        <% end %>
      </div>

      <!-- Profile Details Section -->
      <div class="col-md-7">
        <div class="card-body">
          <h4 class="card-title mb-3"><strong><%= @user.username %></strong></h4>
          <ul class="list-group list-group-flush">
            <li class="list-group-item bg-transparent text-dark">
              <i class="bi bi-calendar"></i> <strong>Age:</strong> <%= @user.age %>
            </li>
            <li class="list-group-item bg-transparent text-dark">
              <i class="bi bi-gender-ambiguous"></i> <strong>Gender:</strong> <%= @user.gender %>
            </li>
            <li class="list-group-item bg-transparent text-dark">
              <i class="bi bi-building"></i> <strong>School:</strong> <%= @user.school %>
            </li>
            <li class="list-group-item bg-transparent text-dark">
              <i class="bi bi-book"></i> <strong>Major:</strong> <%= @user.major %>
            </li>
            <li class="list-group-item bg-transparent text-dark">
              <i class="bi bi-person"></i> <strong>About Me:</strong> <%= @user.about_me %>
            </li>
          </ul>
          <div class="mt-4 text-center">
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn custom-btn text-white" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
