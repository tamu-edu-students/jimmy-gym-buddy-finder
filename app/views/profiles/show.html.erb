<h1 class="text-center mb-5">User Profile</h1>

<div class="container">
  <div class="card shadow-lg mb-5" style="max-width: 700px; margin: 0 auto;">
    <div class="row g-0">
      <div class="col-md-4 text-center p-4">
        <% if @user.photo.attached? %>
          <%= image_tag @user.photo, class: "img-fluid rounded-circle border border-secondary", size: "220x220", alt: "User Photo" %>
        <% else %>
          <%= image_tag "https://www.shutterstock.com/image-vector/default-avatar-profile-icon-social-600nw-1677509740.jpg", class: "img-fluid rounded-circle border border-secondary", style: "width: 220px; height: 220px;", alt: "No Photo Available" %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h4 class="card-title"><strong><%= @user.username %></strong></h4>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="bi bi-calendar"></i> <strong>Age:</strong> <%= @user.age %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-gender-ambiguous"></i> <strong>Gender:</strong> <%= @user.gender %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-building"></i> <strong>School:</strong> <%= @user.school %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-book"></i> <strong>Major:</strong> <%= @user.major %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-person"></i> <strong>About Me:</strong> <%= @user.about_me %>
            </li>
          </ul>
          <div class="mt-4 text-center">
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
