<h1 class="text-center mb-4">Edit Profile</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with model: @user, local: true, class: "needs-validation", novalidate: true do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h3>There were errors while saving the user:</h3>
