<h1 class="main-heading">Edit Profile</h1>

<%= form_with model: @user, local: true do |form| %>
  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :school %>
    <%= form.text_field :school, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :major %>
    <%= form.text_field :major, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :about_me %>
    <%= form.text_area :about_me, class: "form-control" %>
  </div>

  <%= form.submit "Save Changes", class: "btn btn-primary" %>
<% end %>
