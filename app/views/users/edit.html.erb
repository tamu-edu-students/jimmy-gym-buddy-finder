<h1>Edit Profile</h1>

<%= form_with model: @user, local: true do |form| %>
  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, id: 'photo-upload', class: "form-control" %>
    <%# <label for="photo-upload">
      <span class="plus-icon">+</span>
    </label> %>
  </div> 

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :school %>
    <%= form.text_field :school, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :major %>
    <%= form.text_field :major, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :about_me %>
    <%= form.text_area :about_me, class: "form-control" %>
  </div>

  <%= form.submit "Save Changes", class: "btn btn-primary" %>
<% end %>
