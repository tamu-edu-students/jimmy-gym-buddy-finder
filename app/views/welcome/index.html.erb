<div class="container d-flex flex-column align-items-center justify-content-center vh-100 text-center">
  <!-- Main Heading -->
  <h1 class="display-3 text-white mb-3 font-weight-bold">
    Welcome to <%= link_to "Jimmy", root_path, style: "text-decoration: none; color: #a3bb33;" %>
  </h1>

  <!-- Subtitle -->
  <p class="lead text-white mb-4">
    Find Your Fitness Buddies Here!
  </p>

  <!-- Login Button with Google Logo -->
  <div>
    <%= button_to "/auth/google_oauth2", data: { turbo: "false" }, class: "btn btn-google py-3 px-4" do %>
      <span class="d-flex align-items-center justify-content-center">
        <img src="https://www.vectorlogo.zone/logos/google/google-icon.svg" alt="Google logo" class="google-logo mr-2" />
        <span>Login with Google</span>
      </span>
    <% end %>
  </div>
</div>
